<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- View_558_BannerInfo -->
	<include name="View_558_BannerInfo">
		<control type="group">
			<visible>Control.IsVisible(558) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<left>100</left>
			<top>20</top>
			
			<!-- Background -->
			<control type="image">
				<description>background image</description>
				<left>-32</left>
				<top>885</top>
				<width>1790</width>
				<height>845</height>
				<texture border="40">panel_reflect.png</texture>
			</control>
			<control type="image">
				<description>background image</description>
				<left>-32</left>
				<top>89</top>
				<width>1790</width>
				<height>941</height>
				<texture border="40">listpanel_back.png</texture>
			</control>
			<!-- end Background -->
			
			<!-- Banners -->
			<control type="panel" id="558">
				<left>-2</left>
				<top>120</top>
				<width>1182</width>
				<height>880</height>
				<onleft>60</onleft>
				<onright>noop</onright>
				<onup>558</onup>
				<ondown>558</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="BannerInfo">icon</viewtype>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<visible>Container.Content(tvshows)</visible>
				<itemlayout height="110" width="560">
					<control type="image">
						<width>560</width>
						<height>110</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[BannerThumb]</texture>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>4</bordersize>
						<visible>!String.IsEmpty(ListItem.Art(banner)) | String.IsEmpty(ListItem.Art(fanart))</visible>
					</control>
					<control type="group">
						<visible>String.IsEmpty(ListItem.Art(banner))</visible>
						<control type="image">
							<width>560</width>
							<height>110</height>
							<aspectratio>scale</aspectratio>
							<texture colordiffuse="BAFFFFFF" background="true">$INFO[ListItem.Art(fanart)]</texture>
							<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
							<bordersize>4</bordersize>
						</control>
						<control type="image">
							<top>5</top>
							<width>300</width>
							<height>100</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<bordersize>4</bordersize>
							<colordiffuse>BAffffff</colordiffuse>
						</control>
					</control>
					<control type="image">
						<left>490</left>
						<top>0</top>
						<width>60</width>
						<height>60</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
						<bordersize>4</bordersize>
					</control>
					<control type="group">
						<left>10</left>
						<top>10</top>
						<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
					</control>
					<control type="image">
						<width>560</width>
						<height>110</height>
						<aspectratio>scale</aspectratio>
						<texture border="1" colordiffuse="44FFFFFF">black.png</texture>
						<bordersize>2</bordersize>
						<include>FocusFadeOutAnimation</include>
					</control>
				</itemlayout>
				<focusedlayout height="110" width="560">
					<control type="image">
						<width>560</width>
						<height>110</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[BannerThumb]</texture>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>4</bordersize>
						<visible>!String.IsEmpty(ListItem.Art(banner)) | String.IsEmpty(ListItem.Art(fanart))</visible>
					</control>
					<control type="group">
						<visible>String.IsEmpty(ListItem.Art(banner))</visible>
						<control type="image">
							<width>560</width>
							<height>110</height>
							<aspectratio>scale</aspectratio>
							<texture colordiffuse="BAFFFFFF" background="true">$INFO[ListItem.Art(fanart)]</texture>
							<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
							<bordersize>4</bordersize>
						</control>
						<control type="image">
							<top>5</top>
							<width>300</width>
							<height>100</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<bordersize>4</bordersize>
							<colordiffuse>BAffffff</colordiffuse>
						</control>
					</control>
					<control type="image">
						<left>490</left>
						<top>0</top>
						<width>60</width>
						<height>60</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
						<bordersize>4</bordersize>
					</control>
					<control type="group">
						<left>10</left>
						<top>10</top>
						<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
					</control>
					<control type="image">
						<width>560</width>
						<height>110</height>
						<aspectratio>scale</aspectratio>
						<texture border="1" colordiffuse="44FFFFFF">black.png</texture>
						<bordersize>2</bordersize>
						<include>FocusFadeOutAnimation</include>
					</control>
					<control type="image">
						<width>560</width>
						<height>110</height>
						<texture border="10">thumbs/thumbnail_focused.png</texture>
						<include>FocusFadeInAnimation</include>
					</control>
				</focusedlayout>
			</control>

			<control type="scrollbar" id="60">
				<left>-16</left>
				<top>120</top>
				<width>12</width>
				<height>880</height>
				<onright>50</onright>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<ondown>60</ondown>
				<onup>60</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground />
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
			</control>
			<!-- end Banners -->
			
			<control type="group">
				<left>1119</left>
				<top>120</top>
				
				<!-- Fanart -->
				<control type="image">
					<width>610</width>
					<height>330</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
					<fadetime>300</fadetime>
					<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
					<bordersize>2</bordersize>
				</control>
				
				<!-- Title -->
				<control type="label">
					<top>325</top>
					<width>610</width>
					<height>60</height>
					<font>font16_title_bold</font>
					<textcolor>grey</textcolor>
					<scroll>true</scroll>
					<label>[B]$VAR[FloorLabelVar][/B]</label>
					<textoffsetx>15</textoffsetx>
				</control>
				
				<!-- Genre & Episodes -->
				<control type="grouplist">
					<top>376</top>
					<width>610</width>
					<height>270</height>
                	<itemgap>5</itemgap>
					<control type="label">
						<top>376</top>
						<width>610</width>
						<height>40</height>
						<include>ShowCaseInfoPanelButtonsValues</include>
						<label>$INFO[ListItem.Genre]</label>
						<visible>!IsEmpty(ListItem.Genre)</visible>
					</control>
					<control type="label">
						<width>610</width>
						<height>40</height>
						<label>[COLOR labelheader]$LOCALIZE[20360]:[/COLOR] $INFO[ListItem.Property(TotalEpisodes)]$INFO[ListItem.Property(UnWatchedEpisodes), (,[LOWERCASE] $LOCALIZE[16101][/LOWERCASE])]</label>
						<include>ShowCaseInfoPanelButtonsValues</include>
					</control>
				</control>

				<!-- Plot -->
				<control type="textbox">
					<label>$VAR[VideoPlotVar]</label>
					<left>15</left>
					<top>481</top>
					<width>580</width>
					<height>292</height>
					<font>font14_textbox</font>
					<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll) + !Control.HasFocus(61)</autoscroll>
					<pagecontrol>61</pagecontrol>
					<include>ShowCaseInfoPanelButtonsValues</include>
				</control>
				<control type="scrollbar" id="61">
					<left>607</left>
					<top>481</top>
					<width>14</width>
					<height>292</height>
					<onleft>50</onleft>
					<onright>noop</onright>
					<ondown>61</ondown>
					<onup>61</onup>
					<showonepage>false</showonepage>
					<texturesliderbackground />
					<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
					<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				</control>
			</control>
			<!-- end Plot -->
            
            <control type="image">
                <posx>1121</posx>
                <posy>814</posy>
                <height>90</height>
                <width>607</width>
                <texture border="1">separator5.png</texture>
            </control>
			
			<control type="group">
                <posx>1100</posx>
                <posy>910</posy>
                <width>1815</width>
                <height>90</height>
                <orientation>horizontal</orientation>
                <include>VisibleFadeEffect</include>
                <visible>Container.Content(tvshows)</visible>               
                <control type="group">
                    <posy>-5</posy>
                    <width>175</width>
                    <visible>!IsEmpty(ListItem.Property(TotalSeasons))</visible>
                    <control type="label">
                        <posx>0</posx>
                        <posy>2</posy>
                        <width>165</width>
                        <height>60</height>
                        <align>center</align>
                        <label>[B]$INFO[ListItem.Property(TotalSeasons)][/B]</label>
                        <font>font48</font>
                        <wrapmultiline>true</wrapmultiline>
                        <textcolor>grey2</textcolor>
                    </control>
                    <control type="label">
                        <posy>52</posy>
                        <width>165</width>
                        <height>30</height>
                        <align>center</align>
                        <label>[LOWERCASE]$VAR[OneOrMoreSeasonsVar][/LOWERCASE]</label>
                        <font>font12</font>
                        <textcolor>grey2</textcolor>
                    </control>
                </control>
                <control type="group">
                    <visible>!IsEmpty(ListItem.Property(TotalEpisodes))</visible>
                    <width>167</width>
                    <posx>165</posx>
                    <posy>-5</posy>
                    <control type="label">
                        <posx>0</posx>
                        <posy>2</posy>
                        <width>165</width>
                        <height>60</height>
                        <align>center</align>
                        <label>[B]$INFO[ListItem.Property(TotalEpisodes)][/B]</label>
                        <font>font48</font>
                        <wrapmultiline>true</wrapmultiline>
                        <textcolor>grey2</textcolor>
                    </control>
                    <control type="label">
                        <posy>52</posy>
                        <width>165</width>
                        <height>30</height>
                        <align>center</align>
                        <label>[LOWERCASE]$VAR[OneOrMoreEpisodesVar][/LOWERCASE]</label>
                        <font>font12</font>
                        <textcolor>grey2</textcolor>
                    </control>
                </control>                            
                <control type="image" id="800014">
                    <posx>330</posx>
                    <width>165</width>
                    <height>80</height>
                    <colordiffuse>grey2</colordiffuse>
                    <include>MediaFlagVars</include>
                    <bordersize>2</bordersize>
                    <texture>$VAR[StudioIconVar]</texture>
                    <visible>!IsEmpty(Control.GetLabel(800014))</visible>
                </control>
                <control type="label">
                    <posx>330</posx>
                    <width>165</width>
                    <height>90</height>
                    <align>center</align>
                    <label>$INFO[ListItem.Studio]</label>
                    <font>font10</font>
                    <textcolor>white</textcolor>
                    <wrapmultiline>true</wrapmultiline>
                    <visible>IsEmpty(Control.GetLabel(800014))</visible>
                </control>
                <control type="image">
                    <posx>495</posx>
                    <colordiffuse>grey2</colordiffuse>
                    <include>MediaFlagVars</include>
                    <texture fallback="flags/mpaa/NR.png">$VAR[RatingFlagVar]</texture>
                </control>
            </control>
			
			
		</control>
	</include>
</includes>